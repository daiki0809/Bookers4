
<div class="page_box">

	<div class="container">
	<div class= "row">

<% if @book.errors.any? %>
<div id ="error_explanation" class="error">
<h2><%= @book.errors.count %>error prohibited this odj from being saved:</h2>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

	<%= render 'users/sidebar2', post: @book, user: current_user %>

	<main class="col-xs-9">
		<h1>Books</h1>
		<table class="table table-hover">
		<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		</thead>
		<% @books.each do |books| %>
		<tr>
			<td><%= link_to user_path(books.user_id) do %>
				<%= attachment_image_tag books.user, :profile_image,fallback: "no_image.jpg", class: "main_user_img" %>
				<% end %>
			</td>
			<td><%= link_to "#{books.title}", book_path(books.id) %></td>
			<td><%= books.body %></td>
		</tr>
		<% end %>
		</table>
	</main>
	</div>
	</div>
</div>

<%= render 'home/footer' %>
